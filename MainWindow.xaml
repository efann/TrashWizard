<Window x:Class="TrashWizard.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
                  Icon="images/icon/TrashWizard.ico"
                  Title="Trash Wizard">
  <StackPanel VerticalAlignment="Top">
    <Menu Width="Auto" Height="20">
      <MenuItem Header="_File">
        <MenuItem x:Name="AppSave" Header="Save..." HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/save.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem x:Name="AppExit" Header="E_xit" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/exit.png" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_Action">
        <MenuItem x:Name="AppRun" Header="Run" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/run.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem x:Name="AppRemove" Header="Remove" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/remove.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem x:Name="AppCancel" Header="Cancel" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/cancel.png" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>

      <MenuItem Header="_View">
        <MenuItem x:Name="AppFilesInGrid" Header="Files in Grid" HorizontalAlignment="Left" IsCheckable="True" />
        <Separator />
        <MenuItem x:Name="AppFilesInTreeview" Header="Files in Treeview" HorizontalAlignment="Left"
                  IsCheckable="True" />
      </MenuItem>

      <MenuItem Header="_Tools">
        <MenuItem x:Name="AppOptions" Header="Options..." HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/options.png" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem x:Name="AppDriveInfo" Header="Drive Info" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/driveinfo.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem x:Name="AppMicrosoftDiskCleanup" Header="Microsoft Disk Cleanup" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/player_play.png" />
          </MenuItem.Icon>
        </MenuItem>

      </MenuItem>

      <MenuItem Header="_Help">
        <MenuItem x:Name="AppHomePage" Header="Home Page" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/home.png" />
          </MenuItem.Icon>
        </MenuItem>

        <MenuItem x:Name="AppHelpDocumentation" Header="Help Documentation" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/bookcase.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />

        <MenuItem x:Name="AppCheckForUpdates" Header="Check for Updates..." HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/updates.png" />
          </MenuItem.Icon>
        </MenuItem>
        <Separator />

        <MenuItem x:Name="AppCredits" Header="Credits" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/credits.png" />
          </MenuItem.Icon>
        </MenuItem>

        <MenuItem x:Name="AppAbout" Header="About" HorizontalAlignment="Left">
          <MenuItem.Icon>
            <Image Source="images/about.png" />
          </MenuItem.Icon>
        </MenuItem>

      </MenuItem>
    </Menu>
  </StackPanel>
</Window>