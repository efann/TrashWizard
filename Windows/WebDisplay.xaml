<local:BaseWindow x:Class="TrashWizard.Windows.WebDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="clr-namespace:Microsoft.Toolkit.Win32.UI.Controls.WPF;assembly=Microsoft.Toolkit.Win32.UI.Controls"
        xmlns:local="clr-namespace:TrashWizard.Windows"
        mc:Ignorable="d">
  <!--
    WindowStyle="ToolWindow" produces a resizable window with no minimize or maximize buttons at the top. 
  -->

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <wpf:WebView x:Name="foWebView" Grid.Row="0" />
    <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,15,0,0">
      <Button Content="OK"
              Height="25" Margin="10,10,10,10" Width="75" Name="btnOK" TabIndex="1600" IsDefault="True"
              Click="btnOk_Click"
              Cursor="Hand"
              VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" />
    </WrapPanel>
  </Grid>
</local:BaseWindow>